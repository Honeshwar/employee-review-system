         <div id="navbar-right">
          <%if(locals.currentSessionUser){%>
           <button type="button" class="btn " data-bs-toggle="modal" data-bs-target="#showProfileModal">
              <img id="profile-pic" src="https://cdn-icons-png.flaticon.com/128/3237/3237472.png" alt="profile picture">
              <span class="nav-link active" ><%= currentSessionUser.name %></span>
