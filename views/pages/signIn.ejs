<link rel="stylesheet" href="/css/form.css" type="text/css">
<div class="form-container">
  <h1>Sign In</h1>
  <div class="form">
    <%if(locals.error){%>
      <div id="error">
        <%= error %>
      </div>
      <%}%>
        <form action="/signin" method="post">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="email"
              name="email">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" placeholder="password" name="password">
          </div>
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="showPassword" onclick="visiblePass()">
            <label class="form-check-label" for="showPassword">Show Password</label>
          </div>
          <button title="signin and redirect to home" type="submit" class="btn btn-primary">Sign In</button>
        </form>
  </div>

  <div class="redirect-signup-container">
    <p>Don't have account? <a href="/signup">Sign Up</a></p>
  </div>
</div>


    <script>
      function visiblePass() {
        var x = document.getElementById("password");
        if (x.type === "password") {
          x.type = "text";
        } else {
          x.type = "password";
        }
      }
    </script>